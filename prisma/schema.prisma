generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RedemptionCode {
  code        String       @id
  packageType String       @default("STANDARD") @map("package_type")
  status      String       @default("UNUSED")
  createdAt   DateTime     @default(now()) @map("created_at")
  activatedAt DateTime?    @map("activated_at")
  expiresAt   DateTime?    @map("expires_at")
  userId      String?      @map("user_id")
  assessments Assessment[]

  @@map("redemption_codes")
}

model Assessment {
  id             String          @id @default(uuid())
  visitorId      String          @map("visitor_id")
  code           String
  redemptionCode RedemptionCode  @relation(fields: [code], references: [code])
  responses      Json
  scores         Json
  aiAnalysis     String?         @db.Text @map("ai_analysis")
  aiStatus       String          @default("pending") @map("ai_status")
  createdAt      DateTime        @default(now()) @map("created_at")
  completedAt    DateTime?       @map("completed_at")

  @@map("assessments")
}

model Admin {
  id           String   @id @default(uuid())
  username     String   @unique
  passwordHash String   @map("password_hash")
  createdAt    DateTime @default(now()) @map("created_at")

  @@map("admins")
}

model Progress {
  id        String   @id @default(uuid())
  userId    String   @unique @map("user_id")
  responses Json
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("progress")
}

// 访问记录表 - 记录页面访问
model Visit {
  id        String   @id @default(uuid())
  visitorId String   @map("visitor_id")
  page      String   @default("home")  // home, report, admin 等
  userAgent String?  @map("user_agent")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("visits")
}

// 参与记录表 - 记录用户开始答题（选择过至少1题）
model Participation {
  id        String   @id @default(uuid())
  visitorId String   @unique @map("visitor_id")  // 每个用户只记录一次
  createdAt DateTime @default(now()) @map("created_at")

  @@map("participations")
}
