# Database (Vercel Postgres / Neon / Supabase)
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# DeepSeek API Key (backend only - never expose to frontend)
DEEPSEEK_API_KEY="sk-your-deepseek-api-key"

# Admin JWT Configuration
ADMIN_JWT_SECRET="your-super-secret-jwt-key-min-32-chars"
ADMIN_USERNAME="admin"
# Generate with: node -e "console.log(require('bcryptjs').hashSync('your-password', 10))"
ADMIN_PASSWORD_HASH="$2a$10$..."

# Optional: Session expiry in hours (default: 24)
JWT_EXPIRY_HOURS=24
